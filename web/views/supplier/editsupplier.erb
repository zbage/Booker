<script type="text/javascript">

	function verify_and_submit(form)
	{
		var alert_msg = '';
		var supplier_name = $('supplier_name').value;
		if(supplier_name=='')
		{
			alert_msg = alert_msg + "Supplier Name can not be empty!\n";
		}
		var phone_number = $('phone_number').value;
		if(phone_number=='')
		{
			alert_msg = alert_msg + "Phone Number can not be empty!\n";
		}

		if(alert_msg!='')
			alert(alert_msg);
		else
			form.submit();
	}

	function delete_supplier()
	{
		if(confirm("Delete <%=h @supplier.supplier_name%>?"))
			$('delete').submit();
	}

</script>
<div style="width: 400px;margin:auto;margin-top:150px">
	
	<form action="/editsupplier" method="post">
		
		<table width="300px">
			<tr>
				<th colspan=2 align='center'>Edit Supplier</th>
				<input type='hidden' name="id" value="<%=h @supplier.id%>"/>
			</tr>
					<tr>
				<td style="padding-left:5px;width:100px">Supplier Name</td>
				<td><input type="text" name="supplier_name" id="supplier_name" value="<%=h @supplier.supplier_name%>"/></td>
			</tr>
					<tr>
				<td style="padding-left:5px;width:100px">Phone Number</td>
				<td><input type="text" name="phone_number" id="phone_number" value="<%=h @supplier.phone_number%>"/></td>
			</tr>
					<tr>
				<td style="padding-left:5px;width:100px">#Address</td>
				<td><input type="text" name="address" id="address" value="<%=h @supplier.address%>"/></td>
			</tr>
					<tr>
				<td style="padding-left:5px;width:100px">#Comment</td>
				<td><input type="text" name="comment" id="comment" value="<%=h @supplier.comment%>"/></td>
			</tr>
		<tr>
				<td colspan=2 align='right'>
					<input value="Menu" type="button" class="button" onclick="javascript:goto('/menu?id=<%=h @supplier.id%>');"/>
					<input value="Update" type="button" class="button" onclick="javascript:verify_and_submit(this.form);"/>
					<input value="Delete" type="button" class="button" onclick="javascript:delete_supplier();"/>
				</td>
			</tr>
		</table>
		
	</form>
	<form id='delete' action="/deletesupplier" method="post">
		<input type="hidden" name="id" value="<%=h @supplier.id%>"/>
	</form>
</div>
